<div class="container">
    <div id="calendar">
        <%= month_calendar(events: @bookings, attribute: :check_in_date) do |date,bookings| %>
            <%= date.day %>
            <ul class="calendar-lists">
            <% bookings.each do |booking| %>               
                    <li><%= link_to booking.hotel.name, booking %>(<%= no_of_days(booking.check_in_date,booking.check_out_date) %> days stay)</li>
            <% end %>
            </ul>
        <% end %>
    </div>
</div>