<div class="card search-form">
  <div class="card-body"> 


    <%= form_tag hotels_path,:method => 'get' do %> 
      <div class="form-row">
        <div class="form-group col-md-6">
        <label>City</label>
          <%= text_field_tag :city, params[:city], :placeholder => "city", :class => "form-control" %> 
        </div>
        <div class="form-group col-md-6">
        <label for="inputEmail4">No. of guest</label>
          <%= number_field_tag :guest, params[:guest], :placeholder => "no. of guest", :class => "form-control", :min => 0 %> 
        </div>
      </div>
       <div class="form-row">
        <div class="form-group col-md-6">
          <label>Check-in-date</label>
          <%= date_field_tag :check_in, :placeholder => "Check-In", :class => "form-control" %>
        </div>
        <div class="form-group col-md-6">
          <label>Check-out-date</label>
          <%= date_field_tag :check_out, :placeholder => "Check-out", :class => "form-control" %>
        </div>
      </div>
       <div class="form-row">
        <div class="form-group col-md-6">
          <label>single-bed room</label>
          <%= number_field_tag :single_bed_room, params[:single_bed_room], :value => 0, :class => "form-control", :min => 0 %>
        </div>
        <div class="form-group col-md-6">
          <label>double-bed room</label>
          <%= number_field_tag :double_bed_room, params[:double_bed_room], :value => 0, :class => "form-control", :min => 0 %>
        </div>
      </div>
       <div class="form-row">
        <div class="form-group col-md-6">
          <label>suite-room</label>
          <%= number_field_tag :suite_room, params[:suite_room], :value => 0, :class => "form-control", :min => 0 %>
        </div>
        <div class="form-group col-md-6">
          <label>dormitory</label>
          <%= number_field_tag :dormitory, params[:dormitory], :value => 0, :class => "form-control", :min => 0 %>
        </div>
      </div>
        <%= submit_tag "Search", :class => "btn btn-primary btn-sm" %>
    <% end %> 

  </div>
</div>
